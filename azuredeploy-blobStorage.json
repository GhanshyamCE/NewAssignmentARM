{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    }
  },
  "variables": {
    "storageAccountName": [
      "[concat('ExportReport',uniqueString(resourceGroup().id))]",
      "[concat('LogStore',uniqueString(resourceGroup().id))]",
      "[concat('DataLanding',uniqueString(resourceGroup().id))]",
      "[concat('FileTranfer',uniqueString(resourceGroup().id))]"
    ]
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('storageAccountName')[copyIndex()]]",
      "apiVersion": "2016-01-01",
      "location": "[parameters('location')]",
      "comments": "Storage account ",
      "tags": {
        "displayName": "Storage Account"
      },
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "Storage",
      "properties": {},
      "copy":
      {
        "name":"storage",
        "count":4
      }

    }
  ],
  "outputs": {
   
  }
}
